<Page x:Class="TestUnoAppNavReg.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TestUnoAppNavReg.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:ctwuc="using:CommunityToolkit.WinUI.Controls"
      xmlns:hlp="using:TestUnoAppNavReg.Helpers"
      NavigationCacheMode="Required"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid utu:SafeArea.Insets="VisibleBounds">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--ButtonBar-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">

            <Button Content="Show First"
                    Command="{Binding ShowFirstCommandAsync}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="5" /> "
            
            <Button Content="Show Second"
                    Command="{Binding ShowSecondCommandAsync}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="5" /> "
            
        </StackPanel>

        <!--Data-->
        <Grid Grid.Row="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Left-->
            <!--Region.Name set in code behind-->
            <!-- uen:Region.Name="LeftRegion" -->
            <!-- uen:Region.Name="{x:Bind hlp:NavigationHelper.LeftRegionName}" not worked -->
            <ContentControl uen:Region.Attached="True"
                            uen:Region.Name=""
                            Name="ConCtrlLeftRegion"
                            Grid.Column="0"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch" />

            <ctwuc:GridSplitter Grid.Column="1"
                                Width="5"
                                HorizontalAlignment="Stretch" />

            <!--Right-->
            <!--Region.Name set in code behind-->
            <!--uen:Region.Name="RightRegion"-->
            <!--uen:Region.Name="{x:Bind hlp:NavigationHelper.RightRegionName}" not worked -->
            <ContentControl uen:Region.Attached="True"
                            uen:Region.Name=""
                            Name="ConCtrlRightRegion"
                            Grid.Column="2"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch" />

        </Grid>

    </Grid>

</Page>
